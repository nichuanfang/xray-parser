{
  "log": {
    "loglevel": "warning",
    "access": "/var/log/xray/access.log",
    "error": "/var/log/xray/error.log",
    "dnsLog": true
  },
  "api": {
    "services": [
      "HandlerService",
      "LoggerService",
      "StatsService"
    ],
    "tag": "api"
  },
  "outbounds": [
    {
      "tag": "direct",
      "protocol": "freedom",
      "settings": {
        "domainStrategy": "UseIPv4"
      }
    },
    {
      "protocol": "blackhole",
      "tag": "block"
    }
  ],
  "routing": {
    "domainStrategy": "AsIs",
    "rules": [
      {
        "type": "field",
        "port": "80",
        "network": "udp",
        "outboundTag": "block"
      }
    ]
  },
  "policy": null,
  "transport": null,
  "stats": null,
  "reverse": null,
  "fakeDns": null,
  "dns": {
    "servers": [
      "tcp+local://1.1.1.1"
    ]
  }
}
